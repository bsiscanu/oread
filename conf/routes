
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# you could get the name (or components) and explode it in the controller

POST    /usr/login           controllers.UserController.login()
POST    /usr/signup          controllers.UserController.signup()

GET     /dom/:app/:node           controllers.DomController.read(app: String, node: String)
PUT     /dom/:app/:node           controllers.DomController.update(app: String, node: String)
DELETE  /dom/:app/:node           controllers.DomController.remove(app: String, node: String)
